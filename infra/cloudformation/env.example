# Copy these exports into your shell before running deploy.sh.

export AWS_REGION=us-east-1
export NAME_PREFIX=createbuild-prod
export STACK_NAME=createbuild-prod-stack

# API protection (required in production)
export API_TOKEN=replace-with-strong-random-token
# Set true only for temporary local testing.
export ALLOW_UNAUTHENTICATED_API=false

# Minecraft network controls
export MINECRAFT_INGRESS_CIDR=0.0.0.0/0
export ADMIN_INGRESS_CIDR=0.0.0.0/0
export EC2_KEY_PAIR_NAME=
export ALLOCATE_ELASTIC_IP=true

# SageMaker behavior
# Leave SAGEMAKER_IMAGE_URI empty to target an existing endpoint.
export EXISTING_SAGEMAKER_ENDPOINT_NAME=hunyuan3d-async-v2
export SAGEMAKER_IMAGE_URI=
export SAGEMAKER_INSTANCE_TYPE=ml.g5.2xlarge

# GLB-to-vox scientific dependency zip
# Option A: upload local file during deploy
export GLB_LAYER_ZIP_LOCAL_PATH=/absolute/path/to/sci_tri_num_pillow.zip
# Option B: point to an existing bucket/key
export GLB_LAYER_BUCKET_NAME=
export GLB_LAYER_OBJECT_KEY=layers/sci_tri_num_pillow.zip
